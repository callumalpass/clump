# GitHub personal access token (required for private repos, optional for public)
GITHUB_TOKEN=ghp_your_token_here

# Server settings (optional)
HOST=127.0.0.1
PORT=8000

# Claude Code command (optional, defaults to "claude")
CLAUDE_COMMAND=claude

# ============================================
# Claude Code Permission Control
# ============================================

# Permission mode controls how Claude Code handles permissions
# Options: "default", "plan", "acceptEdits", "bypassPermissions"
#   - default: Standard prompting for permissions
#   - plan: Read-only analysis mode (no file modifications)
#   - acceptEdits: Auto-accept file edits
#   - bypassPermissions: Skip all permission prompts (use carefully)
CLAUDE_PERMISSION_MODE=acceptEdits

# Comma-separated list of tools to auto-approve
# Examples: "Read,Glob,Grep,Bash(git:*),Bash(npm test:*)"
# Leave empty to use defaults: Read, Glob, Grep, and git commands
CLAUDE_ALLOWED_TOOLS=

# Comma-separated list of tools to disable
CLAUDE_DISALLOWED_TOOLS=

# Maximum agentic turns (0 = unlimited, default: 10)
CLAUDE_MAX_TURNS=10

# Model to use: sonnet, opus, haiku
CLAUDE_MODEL=sonnet

# ============================================
# Claude Code Session Mode
# ============================================

# Use headless mode (-p flag) for programmatic execution
# When true, uses non-interactive mode with structured output
CLAUDE_HEADLESS_MODE=false

# Output format for headless mode: "text", "json", "stream-json"
# stream-json recommended for real-time updates
CLAUDE_OUTPUT_FORMAT=stream-json
